<%= render "books/book_dashboard_navbar" %>

<div class="wrapper">
  <div class="sidebar">
    <div class="sidebar-buttons">
      <a class="sidebar-item sidebar-item--active" href="">
        <!-- <i class="fa fa-paragraph" aria-hidden="true"></i> -->
        Chapitres
      </a>
      <%= link_to "Personnages", book_characters_path(@book), class: "sidebar-item" %>
      <%= link_to "Lieux", book_places_path(@book), class: "sidebar-item" %>
    </div>
  </div>
  <div class="content-dashboard">
    <%= render "chapters/cards.html.erb" %>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="newChapter" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ajouter un nouveau chapitre</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@book, @chapter] do |f| %>
          <%= f.input :title, label: 'Titre' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
        <%= f.button :submit, "Ajouter un chapitre", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
