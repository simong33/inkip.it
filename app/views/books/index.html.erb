<% if @user_library %>
  <!-- User own space -->

  <%= render "books/navbar_dashboard_profile" %>

  <div class="wrapper">

    <div class="sidebar sidebar--dashboard">
      <div class="sidebar-buttons">
        <h2 class="sidebar-title">Vos livres</h2>
        <a href="" class="sidebar-item sidebar-item--rankings sidebar-item--your-books sidebar-item--active">Tous vos livres</a>
        <a href="" class="sidebar-item sidebar-item--rankings sidebar-item--your-published-books">Livres publiés</a>
      </div>
    </div>

    <div class="content-dashboard content-dashboard--full" id="your-books">
      <%= render "shared/cards" %>
    </div>

    <div class="content-dashboard content-dashboard--full hidden" id="your-published-books">
      <%= render "books/card_published_books", books: @books_published %>
      <% @books_published.each do |book| %>
        <%= render "chapters/modal_published_chapters", book: book %>
      <% end %>
    </div>

  </div>

<% else %>
  <!-- Community books -->

  <%= render "books/navbar_dashboard_community" %>

  <div class="wrapper">

    <div class="sidebar sidebar--dashboard">
      <div class="sidebar-buttons">
        <h2 class="sidebar-title">Communauté</h2>
        <a href="" class="sidebar-item sidebar-item--rankings sidebar-item--your-books sidebar-item--active">Dernières publications</a>
      </div>
    </div>

    <div class="content-dashboard content-dashboard--full" id="all-published-books">
      <%= render "books/card_published_books", books: @books %>
      <% @books.each do |book| %>
        <%= render "chapters/modal_published_chapters", book: book %>
      <% end %>
    </div>

<% end %>



<!-- Modal -->
<div class="modal fade" id="newBook" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ajouter un nouveau livre</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for (@book), remote: true do |f| %>
          <%= f.input :title, label: 'Titre', placeholder: "A la recherche du temps perdu" %>
          <%= f.input :word_goal, label: 'Objectif de mots', placeholder: 20000 %>
      </div>
      <div class="error" id="book-errors"></div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
        <%= f.button :submit, "Ajouter un livre", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
