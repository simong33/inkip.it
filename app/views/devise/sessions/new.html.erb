<div class="content-dashboard wrapper__signin">
  <div class="container container__signin">
    <h2>Connectez-vous</h2>

    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to omniauth_authorize_path(resource_name, provider), class: "facebook-cta" do %>
          <i class="fa fa-facebook" aria-hidden="true"></i><%= "Se connecter avec #{OmniAuth::Utils.camelize(provider)}" %>
        <% end %>
      <% end -%>
    <% end -%>

    <p>ou avec votre email</p>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false, label: 'Mot de passe' %>
        <%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Connexion" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
