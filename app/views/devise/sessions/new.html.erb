<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v3.2&appId=538287653207624&autoLogAppEvents=1"></script>

<div class="content-dashboard wrapper__signin">
  <div class="container container__signin">
    <h2>Connectez-vous</h2>

    <div class="fb-login-button" data-width="" data-size="large" data-button-type="continue_with" data-auto-logout-link="false" data-use-continue-as="false"></div>

    <p>ou avec votre email</p>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false, label: 'Mot de passe' %>
        <%= f.input :remember_me, label: 'Se souvenir de moi', as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Connexion" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
