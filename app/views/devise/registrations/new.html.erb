<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/fr_FR/sdk.js#xfbml=1&version=v3.2&appId=538287653207624&autoLogAppEvents=1"></script>

<div class="content-dashboard wrapper__signin">
  <div class="container container__signin">

    <h2>Inscription</h2>

    <div class="fb-login-button" data-width="" data-size="large" data-button-type="continue_with" data-auto-logout-link="false" data-use-continue-as="false"></div>

    <p>ou avec votre email</p>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :user_name, label: "Nom d'utilisateur", required: true, autofocus: true %>
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, label: 'Mot de passe', required: true, hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, label: 'Confirmation du mot de passe', required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Inscription" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
