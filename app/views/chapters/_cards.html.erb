
<div class="card card--add card--chapter" id="add-chapter-card">
  <div class="card__upper-content">
    <div class="card__title-section card__title--add" id="text-add-a-chapter">Ajouter un chapitre</div>
    <i class="fa fa-plus-square-o" id="plus-add-a-chapter" aria-hidden="true"></i>
  </div>
  <a class="card__link card__link--add" data-toggle="modal" href="#exampleModal" data-target="#exampleModal" id="add-chapter-btn"></a>
</div>

<% @chapters.each_with_index do |chapter, i| %>

    <div class="card card--chapter">
      <%= link_to "", book_chapter_path(@book, chapter), method: :delete, class: "fa fa-trash", data: { confirm: "Etes-vous certain de vouloir effacer ce chapitre ?" } %>
      <div class="card__upper-content">
        <div class="card__title-section">

          <h3 class="card__title"><%= chapter.title %></h3>
        </div>
      </div>
      <div class="card__lower-content">
        <div class="card__chapter-number">Chapitre <%= i + 1 %></div>
        <div class="card__wordcount"><%= chapter.wordcount %> mots</div>
      </div>
      <%= link_to "", book_chapter_path(@book, chapter), class:"card__link" %>
   </div>

<% end %>
