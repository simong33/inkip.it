<div class="modal fade" id="publishedChaptersModal-<%= book.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content modal-followers">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Chapitres publiÃ©s dans <span><%= book.title %></span></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% book.published_chapters.each_with_index do |chapter, i| %>
          <a class="follower-stripe" href="<%= book_chapter_path(book, chapter) %>">
            <div class="follower-username"><%= i + 1 %> - <%= chapter.title %></div>
          </a>
        <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
