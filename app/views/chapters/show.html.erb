          <% else %>">

            <div id="progress-bar-book"></div>
          <% end %>
        </div> -->
      <% end %>
      <div class="bottom-bar__save-status">
        <div class="saving-status saving-status--saved">Enregistr√© !</div>
      </div>
    </div>
  </div>

</div>

