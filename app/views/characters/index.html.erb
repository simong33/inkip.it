<%= render "shared/navbar_dashboard", dashboard: 'dashboard' %>

<div class="wrapper">
  <%= render "shared/dashboard_sidebar", characters: 'characters' %>
  <div class="content-dashboard">
    <%= render "characters/cards.html.erb" %>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="newCharacter" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ajouter un nouveau personnage</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [@book, @character] do |f| %>
          <%= f.input :first_name, label: 'Prénom', placeholder: "Hiro"  %>
          <%= f.input :last_name, label: 'Nom', placeholder: "Protagonist" %>
      </div>
      <p class="disclaimer">Cette fonctionnalité est en cours de développement. Vous pouvez ajouter un personnage, mais pas encore accéder à sa fiche détaillée.</p>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
        <%= f.button :submit, "Ajouter ce personnage", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
